<div class="row">
  <h1 class="text-center page-header">ユーザー詳細ページ</h1></i>
  <aside class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title text-center"><%= @user.name %></h3>
        <ul class="list-unstyled text-center">
          <li>
            <%= link_to "フォロー", followings_user_path %>　
            <%= link_to "フォロワー", followers_user_path %>
          </li>
        </ul>
      </div>
      <div id="follow_button_wrapper">
        <%= render 'relationships/follow_button', user: @user %>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(@user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-md-8">
    <ul class="nav nav-tabs nav-justified">
      <li class="<%= 'active' if current_page?(user_path(@user)) %>"><%= link_to user_path(@user) do %>投稿一覧 <span class="badge"><%= @count_microposts %></span><% end %></li>
    </ul>
    <%= render 'microposts/microposts', microposts: @microposts %>
  </div>
</div>